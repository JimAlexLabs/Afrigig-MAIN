# Database Configuration
DB_HOST=localhost
DB_NAME=u123456789_afrigig
DB_USER=u123456789_afrigig
DB_PASS=your_secure_password

# Application Settings
APP_NAME=Afrigig
APP_ENV=production
APP_DEBUG=false
APP_URL=https://afrigig.org
APP_TIMEZONE=Africa/Lagos

# Security
SESSION_LIFETIME=120
CSRF_LIFETIME=60
PASSWORD_PEPPER=your_random_string_here
JWT_SECRET=your_jwt_secret_here

# File Upload
MAX_UPLOAD_SIZE=5242880
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png
UPLOAD_PATH=/uploads

# M-Pesa API Configuration
MPESA_CONSUMER_KEY=your_consumer_key
MPESA_CONSUMER_SECRET=your_consumer_secret
MPESA_PASSKEY=your_passkey
MPESA_SHORTCODE=your_shortcode
MPESA_ENV=production

# Mail Configuration
MAIL_DRIVER=smtp
MAIL_HOST=smtp.hostinger.com
MAIL_PORT=465
MAIL_USERNAME=noreply@afrigig.org
MAIL_PASSWORD=your_mail_password
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS=noreply@afrigig.org
MAIL_FROM_NAME=Afrigig

# Cache and Session
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_DOMAIN=.afrigig.org

# Rate Limiting
THROTTLE_ENABLED=true
THROTTLE_ATTEMPTS=60
THROTTLE_DECAY_MINUTES=1 